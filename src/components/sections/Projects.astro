---
import Section from "../Section.astro"
import { projects } from "@cv"
---
<Section title="Projectos">

	<ul>
		{
			projects.map( ({ url, description, highlights, name, isActive }) => {
				return (
					<li>
						<article>
							<header>
								<h3>
									<a href={url} title={`Ver proyecto ${name}`} target="_blank" rel="">{name}</a>
									{isActive && <span>&bull;</span>}
								</h3>
								<p>{description}</p>
							</header>
							<footer>
								{
									highlights.map((highlight) => {
										return (
											<span class="badge">{highlight}</span>
										)
									})
								}
							</footer>
						</article>
					</li>
				)
			})
		}
	</ul>

</Section>

<style>
	ul {
		display: block;
		gap: 1rem;
	}
	article {
		border-radius: 6px;
		border: 1px solid #f2f2f2;
		padding: 0.5rem;
		height: 100%;
		margin-bottom: 1rem;
	}
	article h3 {
		font-size: 1.125rem;
	}
	article h3 span {
		color: #16A738;
	}
	article a {
		color: #111;
	}
	article a:hover {
		text-decoration: underline;
	}
	article p {
		font-size: 0.875rem;
		margin: .325rem 0;
		display: block;
	}
	footer {
		display: flex;
		flex-wrap: wrap;
		gap: .125rem;
		font-size: 0.6rem;
	}
</style>